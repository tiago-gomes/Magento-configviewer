<?xml version="1.0"?>
<config>

	<modules>
		<Inkatia_Configviewer>
			<version>1.0.0</version>
		</Inkatia_Configviewer>
	</modules>
	<global>
        <events>
            <controller_front_init_routers>
                <observers>
                    <configviewer>
                        <type>singleton</type>
                        <class>Inkatia_Configviewer_Model_Observer</class>
                        <method>checkForConfigRequest</method>
                    </configviewer>
                </observers>
            </controller_front_init_routers>
        </events>
    </global> 
</config>